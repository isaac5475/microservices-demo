generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["shopping_history"]
}

model Order {
  id         String          @id @default(uuid())
  userId     String
  placedOn   DateTime        @default(now())
  orderItems OrderPosition[]
  
  @@schema("shopping_history")
}

model OrderPosition {
  productId String
  quantity  Int
  Order     Order? @relation(fields: [orderId], references: [id])
  orderId   String
  
  @@id([productId, orderId])
  @@schema("shopping_history")
}
